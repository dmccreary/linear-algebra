  "controls": [
    {
      "type": "slider",
      "label": "Inputs",
      "min": 2,
      "max": 5,
      "default": 3,
      "step": 1,
      "description": "Number of input neurons"
    },
    {
      "type": "slider",
      "label": "Outputs",
      "min": 2,
      "max": 4,
      "default": 2,
      "step": 1,
      "description": "Number of output neurons"
    },
    {
      "type": "select",
      "label": "Activation",
      "options": [
        "None",
        "ReLU",
        "Sigmoid",
        "Tanh"
      ],
      "default": "ReLU",
      "description": "Activation function applied to outputs"
    },
    {
      "type": "button",
      "label": "Random W",
      "description": "Randomize weight matrix"
    },
    {
      "type": "button",
      "label": "Random X",
      "description": "Randomize input vector"
    },
    {
      "type": "checkbox",
      "label": "Show Bias",
      "default": true,
      "description": "Include bias term in computation"
    }
  ],
