  "framework": "p5.js",
  "canvasDimensions": "responsive x 530",
  "responsive": true,
  "dependencies": [
    "p5.js CDN"
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Vector v (x, y, z)",
      "min": -4,
      "max": 4,
      "default": [
        2,
        3,
        2
      ]
    },
    {
      "type": "slider",
      "label": "Basis u1 (x, y, z)",
      "min": -2,
      "max": 2,
      "default": [
        1,
        0,
        0
      ]
    },
    {
      "type": "slider",
      "label": "Basis u2 (x, y, z)",
      "min": -2,
      "max": 2,
      "default": [
        0,
        1,
        0
      ]
    },
    {
      "type": "select",
      "label": "Subspace Type",
      "options": [
        "2D Plane",
        "1D Line"
      ],
      "default": "2D Plane"
    },
    {
      "type": "checkbox",
      "label": "Show Error Vector",
      "default": true
    },
    {
      "type": "checkbox",
      "label": "Show Projection Matrix",
      "default": true
    },
    {
      "type": "button",
      "label": "Reset"
    }
  ],
