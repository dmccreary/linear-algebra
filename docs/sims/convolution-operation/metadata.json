  "prerequisites": [
    "Matrix multiplication",
    "Image representation"
  ],
  "framework": "p5.js",
  "canvasDimensions": "responsive x 500",
  "controls": [
    {
      "type": "select",
      "label": "Kernel",
      "options": [
        "Edge Detect",
        "Blur",
        "Sharpen",
        "Sobel X",
        "Identity"
      ]
    },
    {
      "type": "select",
      "label": "Stride",
      "options": [
        "Stride 1",
        "Stride 2"
      ]
    },
    {
      "type": "select",
      "label": "Padding",
      "options": [
        "Valid",
        "Same"
      ]
    },
    {
      "type": "button",
      "label": "Step",
      "action": "Advance one kernel position"
    },
    {
      "type": "button",
      "label": "Animate",
      "action": "Run continuous animation"
    },
    {
      "type": "button",
      "label": "Reset",
      "action": "Reset convolution"
    }
  ],
